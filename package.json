{
  "name": "Bunbit Game Engine",
  "version": "0.0.5",
  "main": "heavensgate.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.alexljn5.bunbit",
    "productName": "Bunbit",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "files": [
      "heavensgate.js",
      "index.html",
      "main.js",
      "autoclicker.js",
      "5secondreaper.js",
      "inventory.js",
      "andreaslefttoe.js",
      "npc.js",
      "bank.js",
      "prestigesystem.js",
      "creamfix.gif",
      "styles.css",
      "img/**/*",
      "src/**/*",
      "audio/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "latest"
  },
  "dependencies": {
    "express": "^5.1.0",
    "mysql2": "^3.14.5"
  }
}